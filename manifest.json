{
  "manifest_version": 3,
  "name": "Chrome Window Recorder with Microphone",
  "version": "1.0",
  "description": "Records the current Chrome window with microphone audio in WebM format at a balanced resolution for clarity and file size.",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_title": "Window Recorder"
  },
  "side_panel": {
    "default_path": "popup.html"
  },
  "permissions": [
    "desktopCapture",
    "tabCapture",
    "activeTab",
    "downloads",
    "storage",
    "sidePanel"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["recorder.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
